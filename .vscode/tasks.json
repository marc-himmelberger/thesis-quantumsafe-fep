{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "go: clean",
			"type": "shell",
			"command": "go clean -cache",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/lyrebird",
				"env": {
					"CGO_ENABLED": "0"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "static-oqs",
			"type": "shell",
			"command": "./static_oqs.sh",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"CGO_ENABLED": "0"
				}
			},
			"dependsOn": [
				"go: clean"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "go: test lyrebird",
			"type": "go",
			"command": "test",
			"args": [
				"-ldflags=-X main.lyrebirdVersion=lyrebird-drivel-test",
				"./..."
			],
			"problemMatcher": [
				"$go"
			],
			"options": {
				"cwd": "${workspaceFolder}/lyrebird",
				"env": {
					"CGO_ENABLED": "0"
				}
			},
			"dependsOn": [
				"static-oqs"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "go: build lyrebird",
			"type": "go",
			"command": "build",
			"args": [
				"-ldflags=-X main.lyrebirdVersion=lyrebird-drivel-test",
				"./cmd/lyrebird"
			],
			"problemMatcher": [
				"$go"
			],
			"options": {
				"cwd": "${workspaceFolder}/lyrebird",
				"env": {
					"CGO_ENABLED": "0"
				}
			},
			"dependsOn": [
				"go: test lyrebird"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "Docker Compose: down",
			"type": "shell",
			"command": "docker compose --profile \"*\" down",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docker"
			},
			"dependsOn": [
				"go: build lyrebird"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "Docker Compose: build",
			"type": "shell",
			"command": "docker compose --profile \"*\" build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docker"
			},
			"dependsOn": [
				"Docker Compose: down"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
		{
			"label": "Docker Compose: up (nodebug)",
			"type": "shell",
			"command": "docker compose --profile nodebug up --force-recreate --abort-on-container-exit",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docker"
			},
			"dependsOn": [
				"Docker Compose: build"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Docker Compose: up (debugbridge)",
			"type": "shell",
			"command": "docker compose --profile debugbridge up --wait --force-recreate",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/docker"
			},
			"dependsOn": [
				"Docker Compose: build"
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "build",
		},
	]
}